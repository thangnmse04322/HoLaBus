@model IEnumerable<HoLaBus.Models.RentalBusOrder>

@{
    ViewBag.Title = "Quản Lý Thuê Xe";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@section Styles {
    @Styles.Render("~/Content/datatables")
}

<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Thông Tin Đơn Hàng</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>
<br />

<dd>

    @using (Html.BeginForm("ImportEX", "RentalOrderManageAdmin", new { @class = "form-horizontal", role = "form" }))
    {
        <div class="book-button text-center">
            <button class="book-now-btn">Tải Dữ Liệu Về Máy</button>
        </div>
    }

</dd>
<br />


<div class="form-horizontal">
    <div class="container">
        <table class="table table-bordered table-striped table-responsive" id="newsDataTable">
            <thead>
                <tr style="background-color:cadetblue; color:white">
                    <th>
                        @Html.DisplayNameFor(model => model.ApplicationUser.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateBuy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bustype)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Departure)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Stoplocation)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GettingOfBus)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DepartureDay)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ReturnDay)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalMoney)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ConfimDelivery)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PaymentStatus.PaymentStatusName)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (item.UserID == null)
                            {
                                @Html.DisplayFor(modelItem => item.NameGuest)
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => item.ApplicationUser.FullName)
                            }

                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.DateBuy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bustype)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Departure)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Stoplocation)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GettingOfBus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DepartureDay)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReturnDay)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.TotalMoney)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ConfimDelivery)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PaymentStatus.PaymentStatusName)
                        </td>
                        <td style="text-align:center">
                         
                            <label style="background-color:green;text-align:center;color:green">_ <a style="color:white" @Html.ActionLink("Xác Nhận", "Edit", new {  id = item.RentalBusId })></a> </label>
                            <label style="background-color:orange;text-align:center;color:orange">_<a style="color:white" @Html.ActionLink("Chi Tiết", "Details", new {  id = item.RentalBusId })></a></label>
                            <label style="background-color:red;text-align:center;color:red">_<a style="color:white" @Html.ActionLink("Xóa Đơn", "Delete", new {  id = item.RentalBusId })></a> </label>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <p>
            @Html.ActionLink("Trang Quản Lý HoLaBus", "Admin", "Home")
        </p>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    <script>
        $(document).ready(function () {
            $('#newsDataTable').DataTable({
                "language": {
                    "url": "/Content/Vietnamese.json"
                }
            });
        });
    </script>
}
