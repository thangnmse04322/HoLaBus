@model IEnumerable<HoLaBus.Models.ViewSeatBuy>

@{
    ViewBag.Title = "Quản Lý Ghế";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@section Styles {
    @Styles.Render("~/Content/datatables")
}

<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Quản Lý Thông Tin Ghế</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>
<br />
<br />
<div class="container">
    <br />
    <table class="table table-bordered table-striped table-responsive" id="newsDataTable">
        <thead>
            <tr style="background-color:cadetblue; color:white">
                <th style="text-align:center">
                    @Html.DisplayNameFor(model => model.Idbus)
                </th>
                <th style="text-align:center">
                    @Html.DisplayNameFor(model => model.Busname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TicketPrice)
                </th>
                <th style="text-align:center">
                    @Html.DisplayNameFor(model => model.Discount)
                </th>
                <th style="text-align:center">
                    @Html.DisplayNameFor(model => model.TotalSeat)
                </th>
                <th style="text-align:center">
                    @Html.DisplayNameFor(model => model.SeatBuy)
                </th>
                <th style="text-align:center">
                    @Html.DisplayNameFor(model => model.SeatExist)
                </th>

                <th style="text-align:center">
                    @Html.DisplayNameFor(model => model.Status)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Idbus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Busname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TicketPrice)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.Discount)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.TotalSeat)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.SeatBuy)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.SeatExist)
                    </td>
                    @if (item.Status == true)
                    {
                        <td style="text-align:center">
                            <span style="color:blue">Xe Đang Được Mở Bán!</span>
                        </td>
                    }
                    else
                    {
                        <td style="text-align:center">
                            <span style="color:red">Xe Đã Hủy Bán!</span>
                        </td>
                    }

                </tr>
            }
        </tbody>
    </table>
    <p>
        @Html.ActionLink("Trang Quản Lý HoLaBus", "Admin", "Home")
    </p>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    <script>
                $(document).ready(function () {
                    $('#newsDataTable').DataTable({
                        "language": {
                            "url": "/Content/Vietnamese.json"
                        }
                    });
                });
    </script>
}
