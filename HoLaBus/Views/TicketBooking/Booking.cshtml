@{
    ViewBag.Title = "Chọn Tuyến Xe";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Đặt Vé Xe </h2>
                    <span class="title-line"><i class="fa fa-car"> </i></span>
                </div>

            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>

<br />
<br />
<div class="form-horizontal">
    <div class="container">
        <br />

        <label>Chọn Tuyến Xe:</label>

        @using (Html.BeginForm("ChooseLocation", "TicketBooking", new { @class = "form-horizontal", role = "form" }))
        {
            <div class="form-group">
                @Html.DropDownList("busid", (IEnumerable<SelectListItem>)ViewBag.SelectBus, htmlAttributes: new { @class = "form-control" })

            </div>
            <div class="book-button text-center">
                <button class="book-now-btn">Tiếp Tục</button>

            </div>
            <div class="col-md-offset-2 col-md-10">
                <span style="color:red">@ViewBag.Message</span>
            </div>
            <div class="col-md-offset-2 col-md-10">
                <span style="color:red">@ViewBag.Message2</span>
            </div>
        }

        </div>
    </div>
