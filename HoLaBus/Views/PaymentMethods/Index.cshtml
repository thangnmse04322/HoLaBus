@model IEnumerable<HoLaBus.Models.PaymentMethod>

@{
    ViewBag.Title = "Phương Thức Thanh Toán";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@section Styles {
    @Styles.Render("~/Content/datatables")
}
<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Phương Thức Thanh Toán</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>
<br />
<br />

<div class="form-horizontal">
    <div class="container">
        <p>
            @Html.ActionLink("Thêm Phương Thức Thanh Toán", "Create")
        </p>
        <br />
        <table class="table table-bordered table-striped table-responsive" id="newsDataTable">
            <thead>
                <tr style="background-color:cadetblue; color:white">
                    <th>
                        @Html.DisplayNameFor(model => model.PaymentId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Payment)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Monney)
                    </th>
                    <th>
                        Thêm Phương Thức Thanh Toán
                    </th>
                    <th>
                        Xóa Phương Thức Thanh Toán
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PaymentId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Payment)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Monney)
                        </td>
                        <td style="text-align:center">
                           
                            <label style="background-color:green;text-align:center;color:green">_ <a style="color:white" @Html.ActionLink("Sửa", "Edit", new { id = item.PaymentId })></a> </label>
                        

                        </td>
                        <td style="text-align:center">
                          
                            <label style="background-color:red;text-align:center;color:red">_<a style="color:white" @Html.ActionLink("Xóa", "Delete", new { id = item.PaymentId })></a> </label>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <p>
            @Html.ActionLink("Trang Quản Lý HoLaBus", "Admin", "Home")
        </p>
    </div>

</div>
        @section Scripts {
            @Scripts.Render("~/bundles/datatables")
            <script>
                $(document).ready(function () {
                    $('#newsDataTable').DataTable({
                        "language": {
                            "url": "/Content/Vietnamese.json"
                        }
                    });
                });
            </script>
        }
