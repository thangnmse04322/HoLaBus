@model IEnumerable<HoLaBus.Models.Direction>

@{
    ViewBag.Title = "Thêm Tuyến Xe";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@section Styles {
    @Styles.Render("~/Content/datatables")
}


<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Thông Tin Tuyến Xe</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>
<br />
<br />

@using (Html.BeginForm("Create", "Directions", new { @class = "form-horizontal", role = "form" }))
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="book-button text-center">
        <button class="book-now-btn">Thêm Tuyến Xe</button>
    </div>
}
<div class="form-horizontal">
    <div class="container">
        <br />
        <table class="table table-bordered table-striped table-responsive" id="newsDataTable">
            <thead>
                <tr style="background-color:cadetblue; color:white">
                    <th>
                        @Html.DisplayNameFor(model => model.BusId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RoadName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BusStatus)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TicketPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DiscountValue)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NumberTicket)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StopLocation1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StopLocation2)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StopLocation3)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StopLocation4)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StopLocation5)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StopLocation6)
                    </th>
                    <th>
                        <label>Quản Lý</label>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.NumberTicket)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.RoadName)
                        </td>

                        @if (item.BusStatus == true)
                        {
                            <td style="text-align:center">
                                <span style="color:blue">Xe Đang Được Mở Bán!</span>
                            </td>
                        }
                        else
                        {
                            <td style="text-align:center">
                                <span style="color:red">Xe Đã Hủy Bán!</span>
                            </td>
                        }

                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.TicketPrice)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.DiscountValue)
                        </td>
                        <td style="text-align:center">
                            @Html.DisplayFor(modelItem => item.NumberTicket)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StopLocation1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StopLocation2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StopLocation3)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StopLocation4)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StopLocation5)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StopLocation6)
                        </td>
                        <td style="text-align:center">
                           
                            <label style="background-color:green;text-align:center;color:green"><a style="color:white" @Html.ActionLink("Sửa Tuyến", "Edit", new { id = item.BusId })></a> </label>
                            <label style="background-color:orange;text-align:center;color:orange">_<a style="color:white" @Html.ActionLink("Chi Tiết", "Details", new { id = item.BusId})></a></label>
                            <label style="background-color:red;text-align:center;color:red"><a style="color:white" @Html.ActionLink("Xóa Tuyến", "Delete", new { id = item.BusId })></a> </label>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <p>
            @Html.ActionLink("Trang Quản Lý HoLaBus", "Admin", "Home")
        </p>
    </div>
    </div>
        @section Scripts {
            @Scripts.Render("~/bundles/datatables")
            <script>
                $(document).ready(function () {
                    $('#newsDataTable').DataTable({
                        "language": {
                            "url": "/Content/Vietnamese.json"
                        }
                    });
                });
            </script>
        }
