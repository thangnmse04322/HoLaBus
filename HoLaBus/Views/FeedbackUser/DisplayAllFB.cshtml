@model IEnumerable<HoLaBus.Models.Feedback>

@{
    ViewBag.Title = "Đánh Giá Khách ";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@section Styles {
    @Styles.Render("~/Content/datatables")
}


<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->

            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Đánh Giá Của Khách Hàng Về HoLa Bus</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                </div>
                <div class="section-title  text-danger">
                    <table >
                        @foreach (var item in Model)
            {
                            <tr>
                                <td>

                                    <b style="color:white">@Html.DisplayFor(modelItem => item.ApplicationUser.FullName)</b><sub><i style="color:white">: (<i>@Html.DisplayFor(modelItem => item.DateCreate)</i>)</i></sub>
                                    <b style="color:white">: </b><i style="color:tan">@Html.DisplayFor(modelItem => item.FeedbackUser)</i>
                                    <p style="color:white;margin-left:80px"><sup><i><b>HoLa Bus: </b>  @Html.DisplayFor(modelItem => item.FeedbackAdmin)</i></sup></p>
                                    <br />
                                </td>


                            </tr>

                        }

                    </table>
                    <p>
                        @Html.ActionLink("Quay lại", "Index")
                    </p>
                </div>
                </div>
            </div>
        </div>
  
</section>

@section Scripts {
    @Scripts.Render("~/bundles/datatables")
    <script>
        $(document).ready(function () {
            $('#newsDataTable').DataTable({
                "language": {
                    "url": "/Content/Vietnamese.json"
                }
            });
        });
    </script>
}
